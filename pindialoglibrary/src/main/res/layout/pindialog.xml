<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#343434"
                android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Enter Passcode"
        android:textColor="#ffffffff"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_small_circle_1"
            style="@style/input_indicator"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/img_big_circle_1"
            style="@style/pin_pad_button"
            android:text="1"/>

        <Button
            android:id="@+id/img_big_circle_2"
            style="@style/pin_pad_button"
            android:text="2"/>

        <Button
            android:id="@+id/img_big_circle_3"
            style="@style/pin_pad_button"
            android:text="3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/big_btn_vertical_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/img_big_circle_4"
            style="@style/pin_pad_button"
            android:text="4"/>

        <Button
            android:id="@+id/img_big_circle_5"
            style="@style/pin_pad_button"
            android:text="5"/>

        <Button
            android:id="@+id/img_big_circle_6"
            style="@style/pin_pad_button"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/big_btn_vertical_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/img_big_circle_7"
            style="@style/pin_pad_button"
            android:text="7"/>

        <Button
            android:id="@+id/img_big_circle_8"
            style="@style/pin_pad_button"
            android:text="8"/>

        <Button
            android:id="@+id/img_big_circle_9"
            style="@style/pin_pad_button"
            android:text="9"/>
    </LinearLayout>

    <Button
        android:id="@+id/img_big_circle_0"
        style="@style/pin_pad_button"
        android:layout_below="@+id/ll4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/big_btn_vertical_margin"
        android:text="0"/>

</RelativeLayout>